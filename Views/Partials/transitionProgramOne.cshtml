<style>
  :root {
    --hero-bg-alt: url("/media/us5phorc/12סיון-ומאיה-סופי-scaled-1.jpg");
    --accent-yellow-alt: #f5d643;
    --white-semi-alt: rgba(255, 255, 255, 0.95);
  }

  .hero-alt {
    background-image: var(--hero-bg-alt);
    background-size: cover;
    background-position: center;
    position: relative;
    padding: 200px 35px;
    line-height: 1.5;
    font-family: "Assistant", sans-serif;
    height: 950px;
  }

  .hero-alt::before {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.55);
    z-index: 1;
  }

  .hero-inner-alt {
    position: relative;
    display: flex;
    flex-direction: row-reverse;
    gap: clamp(80px, 10vw, 160px);
    align-items: center;
    justify-content: space-between;
    max-width: 1280px;
    margin: auto;
    z-index: 2;
    flex-wrap: wrap;
  }

  .hero-col-alt {
    flex: 1 1 480px;
    min-width: 320px;
  }

  .hero-img-title {
    max-width: 600px;
    margin-bottom: 40px;
    display: block;
    border-radius: 12px;
  }

  .hero-sub-alt {
    max-width: 700px;
    direction: rtl;
    text-align: right;
    color: #FFFFFF;
    font-family: "Assistant", Sans-serif;
    font-size: 28px;
    font-weight: 700;
    text-shadow: 0px 0px 10px #000000;
  }

  .hero-cta-alt {
    display: inline-block;
    margin-top: 20px;
    padding: 12px 20px;
    background: var(--white-semi-alt);
    color: #111;
    font-weight: bold;
    text-decoration: none;
    border-radius: 6px;
    border: 2px solid #fff;
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.4);
    text-align: right;
  }

  .video-frame-wrap-alt {
    width: 100%;
    max-width: 1000px;
    aspect-ratio: 16/9;
    overflow: hidden;
    border-radius: 12px;
    border: 4px solid #fff;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.45);
    margin: auto;
  }

  .video-frame-wrap-alt iframe {
    width: 100%;
    height: 100%;
    border: 0;
    display: block;
  }

  .video-caption-alt {
    font-family: "Assistant", Sans-serif;
    text-align: right;
    color: #fff;
    margin-top: 12px;
    font-size: 25px;
    direction: rtl;
  }

  .a-div-alt {
    text-align: right;
  }

  @@media (max-width: 900px) {
    .hero-inner-alt {
      flex-direction: column;
      gap: 40px;
    }

    .hero-sub-alt {
      text-align: center;
    }

    .video-caption-alt {
      text-align: center;
    }
  }
</style>

