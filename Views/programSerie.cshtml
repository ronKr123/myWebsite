@using Umbraco.Cms.Core.Models.PublishedContent
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    Layout = "master.cshtml";
    var backImg = Model.Value<IPublishedContent>("backImg")?.Url();
    var titleImg = Model.Value<IPublishedContent>("squareImage")?.Url();
    var description = Model.Value<string>("discreption");
    var generalDescription = Model.Value<string>("programGeneralDescription"); // חדש
    var episodes = Model.ChildrenOfType("EpisodePage");
}

<div class="program-header">
    <div class="program-title">
        <h1 style="direction: rtl;">@Model.Name</h1>
    </div>
    <button id="favorite-btn">
        <i class="fa-regular fa-heart" id="favorite-icon"></i>
    </button>
</div>

<section class="program-section">

    <div class="program-content container">

        @if (!string.IsNullOrWhiteSpace(generalDescription))
        {
            <div class="general-description mb-4">
                <p>@Html.Raw(generalDescription)</p>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(description))
        {
            <div class="text-content mb-4">
                <p class="description">@Html.Raw(description)</p>
            </div>
        }

        <hr />

        <div class="episodes-grid">
            @foreach (var episode in episodes)
            {
                var episodeImage = episode.Value<IPublishedContent>("imageEpisode")?.Url();
                var episodeName = episode.Value<string>("episodeTitle");

                <div class="episode-wrapper">
                    <a href="@episode.Url()" class="episode-card">
                        <img src="@episodeImage" alt="@episodeName" loading="lazy" />
                    </a>
                    <h3 class="episode-title">@episodeName</h3>
                </div>
            }
        </div>

    </div>
</section>

<style>
    body {
        margin: 0;
        padding: 0;
        background-color: #e6f0fa;
        font-family: "Segoe UI", sans-serif;
    }

    .program-content {
        padding: 2rem 1rem;
    }

    .description, .general-description p {
        direction: rtl;
        text-align: right;
        font-size: 1.1rem;
        line-height: 1.7;
        color: #333;
        background: #f4f4f4;
        padding: 1rem;
        border-radius: 8px;
    }

    .episodes-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 30px;
        margin-top: 20px;
        direction: rtl;
    }

    .episode-wrapper {
        max-width: 300px;
        margin: 0 auto;
        text-align: center;    
    }

    .episode-title {
        margin-top: 0.75rem;
        font-size: 1rem;
        color: #003f88;
        font-weight: bold;
    }

    .episode-card {
        display: block;
        background: #ffffff;
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.3s, box-shadow 0.3s;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .episode-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    }

    .episode-card img {
        width: 100%;
        height: 160px;
        object-fit: cover;
        display: block;
        border-radius: 12px;
    }

    @@media (max-width: 600px) {
        .episode-title {
            font-size: 0.9rem;
        }
    }

    .program-header {
        position: relative;
        height: 60px; 
        margin: 30px;
    }

    .program-title {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        display: flex;
        align-items: center;
        gap: 10px;
        text-align: center;
    }

    #favorite-btn {
        position: absolute;
        top: 50%;
        right: 20px;
        transform: translateY(-50%);
        font-size: 30px;
        background: none;
        border: none;
        cursor: pointer;
    }
</style>

<script>
    const programId = @Model.Id; 
    const programName = "@Model.Name";
    const programImage = "@(Model.Value<IPublishedContent>("squareImage")?.Url() ?? "")";
    const programUrl = "@Model.Url()";

    let favorites = JSON.parse(localStorage.getItem("favoritePrograms") || "[]");

    const favoriteBtn = document.getElementById("favorite-btn");
    const favoriteIcon = document.getElementById("favorite-icon");

    if (favorites.find(p => p.id === programId)) {
        favoriteIcon.classList.remove("fa-regular");
        favoriteIcon.classList.add("fa-solid");
    }

    favoriteBtn.addEventListener("click", () => {
        const index = favorites.findIndex(p => p.id === programId);

        if (index === -1) {
            favorites.push({ id: programId, name: programName, image: programImage, urlProgram: programUrl });
            favoriteIcon.classList.remove("fa-regular");
            favoriteIcon.classList.add("fa-solid");
        } else {
            // הסר מהמועדפים
            favorites.splice(index, 1);
            favoriteIcon.classList.remove("fa-solid");
            favoriteIcon.classList.add("fa-regular");
        }

        localStorage.setItem("favoritePrograms", JSON.stringify(favorites));
    });
</script>
